@model ArmyManagementSystem.Models.StaffMember

@{
    ViewData["Title"] = "Edit";
}

<div class="mt-3">
    <h1>Επεξεργασία μέλους</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="StaffMembers" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StaffMemberId" />
            <div class="form-group mt-2">
                <label asp-for="SerialNumber" class="control-label">Αριθμός μητρώου:</label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Rank" class="control-label">Βαθμός:</label>
                <select asp-for="Rank" class="form-select">
                    <option value="ΣΤΡΤΗΣ" selected="@(Model.Rank == "ΣΤΡΤΗΣ" ? "selected" : null)">ΣΤΡΤΗΣ</option>
                    <option value="ΥΔΝΕΑΣ" selected="@(Model.Rank == "ΥΔΝΕΑΣ" ? "selected" : null)">ΥΔΝΕΑΣ</option>
                    <option value="ΔΝΕΑΣ" selected="@(Model.Rank == "ΔΝΕΑΣ" ? "selected" : null)">ΔΝΕΑΣ</option>
                    <option value="ΛΧΙΑΣ" selected="@(Model.Rank == "ΛΧΙΑΣ" ? "selected" : null)">ΛΧΙΑΣ</option>
                    <option value="ΥΔΝΕΑΣ ΟΒΑ" selected="@(Model.Rank == "ΥΔΝΕΑΣ ΟΒΑ" ? "selected" : null)">ΥΔΝΕΑΣ ΟΒΑ</option>
                    <option value="ΔΝΕΑΣ ΟΒΑ" selected="@(Model.Rank == "ΔΝΕΑΣ ΟΒΑ" ? "selected" : null)">ΔΝΕΑΣ ΟΒΑ</option>
                    <option value="ΔΝΕΑΣ ΕΜΘ-ΕΠΟΠ" selected="@(Model.Rank == "ΔΝΕΑΣ ΕΜΘ-ΕΠΟΠ" ? "selected" : null)">ΔΝΕΑΣ ΕΜΘ-ΕΠΟΠ</option>
                    <option value="ΛΧΙΑΣ ΕΜΘ-ΕΠΟΠ" selected="@(Model.Rank == "ΛΧΙΑΣ ΕΜΘ-ΕΠΟΠ" ? "selected" : null)">ΛΧΙΑΣ ΕΜΘ-ΕΠΟΠ</option>
                    <option value="ΛΧΙΑΣ ΕΚ ΣΜΥ" selected="@(Model.Rank == "ΛΧΙΑΣ ΕΚ ΣΜΥ" ? "selected" : null)">ΛΧΙΑΣ ΕΚ ΣΜΥ</option>
                    <option value="ΕΠΧΙΑΣ ΕΜΘ-ΕΠΟΠ" selected="@(Model.Rank == "ΕΠΧΙΑΣ ΕΜΘ-ΕΠΟΠ" ? "selected" : null)">ΕΠΧΙΑΣ ΕΜΘ-ΕΠΟΠ</option>
                    <option value="ΕΠΧΙΑΣ ΕΚ ΣΜΥ" selected="@(Model.Rank == "ΕΠΧΙΑΣ ΕΚ ΣΜΥ" ? "selected" : null)">ΕΠΧΙΑΣ ΕΚ ΣΜΥ</option>
                    <option value="ΑΛΧΙΑΣ ΕΜΘ-ΕΠΟΠ" selected="@(Model.Rank == "ΑΛΧΙΑΣ ΕΜΘ-ΕΠΟΠ" ? "selected" : null)">ΑΛΧΙΑΣ ΕΜΘ-ΕΠΟΠ</option>
                    <option value="ΑΛΧΙΑΣ ΕΚ ΣΜΥ" selected="@(Model.Rank == "ΑΛΧΙΑΣ ΕΚ ΣΜΥ" ? "selected" : null)">ΑΛΧΙΑΣ ΕΚ ΣΜΥ</option>
                    <option value="ΑΝΘΣΤΗΣ" selected="@(Model.Rank == "ΑΝΘΣΤΗΣ" ? "selected" : null)">ΑΝΘΣΤΗΣ</option>
                    <option value="ΔΕΑ" selected="@(Model.Rank == "ΔΕΑ" ? "selected" : null)">ΔΕΑ</option>
                    <option value="ΑΝΘΛΓΟΣ" selected="@(Model.Rank == "ΑΝΘΛΓΟΣ" ? "selected" : null)">ΑΝΘΛΓΟΣ</option>
                    <option value="ΥΠΛΓΟΣ" selected="@(Model.Rank == "ΥΠΛΓΟΣ" ? "selected" : null)">ΥΠΛΓΟΣ</option>
                    <option value="ΛΓΟΣ" selected="@(Model.Rank == "ΛΓΟΣ" ? "selected" : null)">ΛΓΟΣ</option>
                    <option value="ΤΧΗΣ" selected="@(Model.Rank == "ΤΧΗΣ" ? "selected" : null)">ΤΧΗΣ</option>
                    <option value="ΑΝΧΗΣ" selected="@(Model.Rank == "ΑΝΧΗΣ" ? "selected" : null)">ΑΝΧΗΣ</option>
                    <option value="ΣΧΗΣ" selected="@(Model.Rank == "ΣΧΗΣ" ? "selected" : null)">ΣΧΗΣ</option>
                    <option value="ΤΑΞΧΟΣ" selected="@(Model.Rank == "ΤΑΞΧΟΣ" ? "selected" : null)">ΤΑΞΧΟΣ</option>
                    <option value="ΥΠΤΓΟΣ" selected="@(Model.Rank == "ΥΠΤΓΟΣ" ? "selected" : null)">ΥΠΤΓΟΣ</option>
                    <option value="ΑΝΤΓΟΣ" selected="@(Model.Rank == "ΑΝΤΓΟΣ" ? "selected" : null)">ΑΝΤΓΟΣ</option>
                    <option value="ΣΤΓΟΣ" selected="@(Model.Rank == "ΣΤΓΟΣ" ? "selected" : null)">ΣΤΓΟΣ</option>
                </select>
                <span asp-validation-for="Rank" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Surname" class="control-label">Επώνυμο:</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Name" class="control-label">Όνομα:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="FatherName" class="control-label">Πατρώνυμο:</label>
                <input asp-for="FatherName" class="form-control" />
                <span asp-validation-for="FatherName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="DateOfBirth" class="control-label">Ημερομηνία γέννησης:</label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ColorOfHair" class="control-label">Χρώμα κόμης:</label>
                <input asp-for="ColorOfHair" class="form-control" />
                <span asp-validation-for="ColorOfHair" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ColorOfEyes" class="control-label">Χρώμα οφθαλμών:</label>
                <input asp-for="ColorOfEyes" class="form-control" />
                <span asp-validation-for="ColorOfEyes" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Height" class="control-label">Ύψος:</label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="BloodType" class="control-label">Ομάδα αίματος:</label>
                <select asp-for="BloodType" class="form-select">
                    <option value="A+" selected="@(Model.BloodType == "A+" ? "selected" : null)">A+</option>
                    <option value="A-" selected="@(Model.BloodType == "A-" ? "selected" : null)">A-</option>
                    <option value="B+" selected="@(Model.BloodType == "B+" ? "selected" : null)">B+</option>
                    <option value="B-" selected="@(Model.BloodType == "B-" ? "selected" : null)">B-</option>
                    <option value="AB+" selected="@(Model.BloodType == "AB+" ? "selected" : null)">AB+</option>
                    <option value="AB-" selected="@(Model.BloodType == "AB-" ? "selected" : null)">AB-</option>
                    <option value="O+" selected="@(Model.BloodType == "O+" ? "selected" : null)">O+</option>
                    <option value="O-" selected="@(Model.BloodType == "O-" ? "selected" : null)">O-</option>
                </select>
                <span asp-validation-for="BloodType" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Address" class="control-label">Διεύθυνση:</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="PhoneNumber" class="control-label">Τηλέφωνο:</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Email" class="control-label">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Ενημέρωση" class="btn btn-primary" />
                <a asp-controller="StaffMembers" asp-action="Index" class="btn btn-secondary">Πίσω</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
