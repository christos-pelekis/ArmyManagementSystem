@model ArmyManagementSystem.Models.StaffMember

@{
    ViewData["Title"] = "Delete";
}

<div class="mt-3">
    <h1>Διαγραφή μέλους</h1>
</div>
<div class="mt-3">
    <h3 class="text-danger">Σίγουρα θέλετε να διαγράψετε αυτό το μέλος;</h3>
    <h5 class="text-secondary">Αυτή η ενέργεια δεν μπορεί να αναιρεθεί.</h5>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Αριθμός μητρώου:
        </dt>
        <dd class="col-sm-10">
            @Model.SerialNumber
        </dd>
        <dt class="col-sm-2">
            Βαθμός:
        </dt>
        <dd class="col-sm-10">
            @Model.Rank
        </dd>
        <dt class="col-sm-2">
            Επώνυμο:
        </dt>
        <dd class="col-sm-10">
            @Model.Surname
        </dd>
        <dt class="col-sm-2">
            Όνομα:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Πατρώνυμο:
        </dt>
        <dd class="col-sm-10">
            @Model.FatherName
        </dd>
        <dt class="col-sm-2">
            Ημερομηνία γέννησης:
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfBirth.ToString("dd-MM-yyyy")
        </dd>
        <dt class="col-sm-2">
            Χρώμα κόμης:
        </dt>
        <dd class="col-sm-10">
            @Model.ColorOfHair
        </dd>
        <dt class="col-sm-2">
            Χρώμα οφθαλμών:
        </dt>
        <dd class="col-sm-10">
            @Model.ColorOfEyes
        </dd>
        <dt class="col-sm-2">
            Ύψος:
        </dt>
        <dd class="col-sm-10">
            @Model.Height
        </dd>
        <dt class="col-sm-2">
            Ομάδα αίματος:
        </dt>
        <dd class="col-sm-10">
            @Model.BloodType
        </dd>
        <dt class="col-sm-2">
            Διεύθυνση:
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class="col-sm-2">
            Τηλέφωνο:
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="StaffMemberId" />
        <input type="submit" value="Διαγραφή" class="btn btn-danger" />
        <a asp-controller="StaffMembers" asp-action="Index" class="btn btn-secondary">Πίσω</a>
    </form>
</div>
