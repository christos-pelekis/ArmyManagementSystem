@model ArmyManagementSystem.Models.LeaveRequest

@{
    ViewData["Title"] = "Create";    
}

<div class="mt-3">
    <h1>Εισαγωγή άδειας</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="LeaveRequests" asp-action="Create" asp-route-staffMemberId="@ViewBag.StaffMemberId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <input type="hidden" asp-for="StaffMemberId" value="@ViewBag.StaffMemberId" required />
                <span asp-validation-for="StaffMemberId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="LeaveType" class="control-label">Έιδος άδειας:</label>                
                <select asp-for="LeaveType" class="form-select">
                    <option value="Κανονική">Κανονική</option>
                    <option value="Τιμητική">Τιμητική</option>
                    <option value="Αναρρωτική">Αναρρωτική</option>
                    <option value="Αγροτική">Αγροτική</option>
                    <option value="Φοιτητική">Φοιτητική</option>
                    <option value="Αντιμετώπιση θεομηνίας">Αντιμετώπιση θεομηνίας</option>
                    <option value="Προσωπική">Προσωπική</option>
                    <option value="Επικίνδυνης εργασίας">Επικίνδυνης εργασίας</option>
                    <option value="Γονική">Γονική</option>
                    <option value="Ειδική">Ειδική</option>
                </select>
                <span asp-validation-for="LeaveType" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="StartDate" class="control-label">Ημερομηνία αναχώρησης:</label>
                <input asp-for="StartDate" type="date" class="form-control" required />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="EndDate" class="control-label">Ημερομηνία επιστροφής:</label>
                <input asp-for="EndDate" type="date" class="form-control" required />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Location" class="control-label">Τόπος:</label>
                <input asp-for="Location" class="form-control" required />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Εισαγωγή" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-controller="LeaveRequests" asp-action="ByStaffMember" asp-route-staffMemberId="@ViewBag.StaffMemberId">Πίσω</a>
            </div>
        </form>
    </div>
</div>

